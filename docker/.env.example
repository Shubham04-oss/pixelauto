# Environment variables for AI Short-Video Creator
# Copy this file to .env and customize the values

# =============================================================================
# API KEYS (Optional but recommended)
# =============================================================================

# Pexels API for stock photos/videos (free tier available)
# Get your API key from: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Hugging Face Hub token for model downloads (optional)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_HUB_TOKEN=your_huggingface_token_here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default summarization model
SUMMARIZER_MODEL=facebook/bart-large-cnn

# Default text-to-speech model
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Enable/disable Stable Diffusion for image generation
USE_STABLE_DIFFUSION=true

# Model cache directory
MODEL_CACHE_DIR=./models

# =============================================================================
# VIDEO SETTINGS
# =============================================================================

# Default video length in seconds
DEFAULT_VIDEO_LENGTH=60

# Default number of images per video
DEFAULT_NUM_IMAGES=3

# Video output format
VIDEO_FORMAT=mp4

# Video quality (1-100, higher is better)
VIDEO_QUALITY=85

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Maximum file upload size (MB)
STREAMLIT_MAX_UPLOAD_SIZE=200

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of threads for processing
NUM_THREADS=4

# Enable GPU acceleration (requires CUDA)
USE_GPU=auto

# Memory limit for models (GB)
MAX_MEMORY_GB=8

# Temporary file directory
TEMP_DIR=/tmp/ai_video_creator

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=

# =============================================================================
# SECURITY
# =============================================================================

# Enable authentication (for production deployment)
ENABLE_AUTH=false

# Basic auth username/password (if ENABLE_AUTH=true)
AUTH_USERNAME=admin
AUTH_PASSWORD=change_this_password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable development features
DEV_MODE=false

# Skip model downloads on startup
SKIP_MODEL_DOWNLOAD=false