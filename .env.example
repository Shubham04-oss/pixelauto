# AI Short-Video Creator - Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# API KEYS (Optional but recommended for better results)
# =============================================================================

# Pexels API for stock photos/videos (free tier: 200 requests/hour)
# Get your key at: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# HuggingFace Hub Token for accessing gated models (optional)
# Get your token at: https://huggingface.co/settings/tokens
HUGGINGFACE_HUB_TOKEN=your_huggingface_token_here

# Unsplash API for additional stock photos (optional)
# Get your key at: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Text Summarization Model
SUMMARIZER_MODEL=facebook/bart-large-cnn
# Alternatives: google/pegasus-xsum, microsoft/DialoGPT-medium

# Text-to-Speech Model
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
# Alternatives: tts_models/en/ljspeech/fast_pitch, tts_models/en/ek1/tacotron2

# Image Generation Model (if using local Stable Diffusion)
IMAGE_MODEL=runwayml/stable-diffusion-v1-5
# Alternatives: stabilityai/stable-diffusion-2-1, CompVis/stable-diffusion-v1-4

# =============================================================================
# VIDEO SETTINGS
# =============================================================================

# Default video duration in seconds
VIDEO_DURATION=45

# Maximum text length for summarization
MAX_SUMMARY_LENGTH=150

# Video resolution (width x height)
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920

# Frames per second
VIDEO_FPS=30

# Video bitrate
VIDEO_BITRATE=2M

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Use GPU if available (true/false)
USE_GPU=false

# Batch size for processing
BATCH_SIZE=1

# Number of worker threads
NUM_WORKERS=2

# Maximum memory usage (in GB)
MAX_MEMORY=4

# Cache models locally (true/false)
CACHE_MODELS=true

# =============================================================================
# TEXT PROCESSING
# =============================================================================

# Maximum input text length (characters)
MAX_INPUT_LENGTH=5000

# Minimum summary length (words)
MIN_SUMMARY_WORDS=30

# Maximum summary length (words)
MAX_SUMMARY_WORDS=120

# Language for processing
DEFAULT_LANGUAGE=en

# =============================================================================
# AUDIO SETTINGS
# =============================================================================

# Audio sample rate
AUDIO_SAMPLE_RATE=44100

# Audio channels (1=mono, 2=stereo)
AUDIO_CHANNELS=2

# TTS voice speed (0.5-2.0)
TTS_SPEED=1.0

# Audio normalization (-20 to 0 dB)
AUDIO_NORMALIZE_DB=-12

# =============================================================================
# VISUAL SETTINGS
# =============================================================================

# Caption font family
CAPTION_FONT=Arial-Bold

# Caption font size
CAPTION_FONT_SIZE=48

# Caption color (hex)
CAPTION_COLOR=#FFFFFF

# Caption outline color (hex)
CAPTION_OUTLINE_COLOR=#000000

# Background color for text slides (hex)
BACKGROUND_COLOR=#1a1a1a

# =============================================================================
# FILE MANAGEMENT
# =============================================================================

# Automatic cleanup of old files (true/false)
AUTO_CLEANUP=true

# Days to keep output files
CLEANUP_DAYS=30

# Maximum file size for uploads (MB)
MAX_UPLOAD_SIZE=50

# Allowed file extensions
ALLOWED_EXTENSIONS=txt,md,pdf,docx,mp3,wav

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Save processing logs (true/false)
SAVE_LOGS=true

# Enable debug mode (true/false)
DEBUG_MODE=false

# Verbose output (true/false)
VERBOSE=false

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit server port
STREAMLIT_SERVER_PORT=8501

# Streamlit server address
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Hide Streamlit menu (true/false)
STREAMLIT_HIDE_MENU=true

# Streamlit theme
STREAMLIT_THEME=dark

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable file upload restrictions (true/false)
RESTRICT_UPLOADS=true

# Maximum concurrent users
MAX_CONCURRENT_USERS=10

# Rate limiting (requests per minute)
RATE_LIMIT=30

# Enable HTTPS redirect (true/false)
FORCE_HTTPS=false

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL=false

# Use faster models (may reduce quality)
USE_FAST_MODELS=false

# Enable model quantization for speed (true/false)
ENABLE_QUANTIZATION=false

# Use smaller models for low-memory systems (true/false)
LOW_MEMORY_MODE=false

# =============================================================================
# EXAMPLES AND DEFAULTS
# =============================================================================

# Example values for quick setup:
# PEXELS_API_KEY=563492ad6f91700001000001abc123def456
# HUGGINGFACE_HUB_TOKEN=hf_abcdefghijklmnopqrstuvwxyz1234567890
# USE_GPU=true
# VIDEO_DURATION=60
# MAX_SUMMARY_LENGTH=200